                                                                    </td>
                                                                    <td>
                                                                        <input type="text" class="form-control form-control-solid text-end" name="price[]" placeholder="0.00" value="@orderDetail.SubAmount" data-kt-element="price">
                                                                    </td>
                                                                </tr>
